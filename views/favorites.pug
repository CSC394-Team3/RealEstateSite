doctype html

html

	link(rel = 'stylesheet' , href = '/css/bootstrap.min.css')
	link(rel = 'stylesheet' , href = '/css/styles.css') 
	link(href = 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" )
	 
	
	style.
		body {
			font-family: Arial, Helvetica, sans-serif, 20px ;
			color: black;
			margin        : 0;
			padding       : 0;
			background-color: #cad297;
		} 


		input[type=submit] {
		  border-radius: 25px;
		  
		}  

		input[type=text] {
			width: 100%;
			padding: 12px 20px;
			margin: 11px 0;
			display: inline-block;
			border: 1px solid #ccc;
			box-sizing: border-box;
		}
		
	body
		h1 My Favorites
		
		form(action = "/favorites", method = "post")
			div.actions 
				input(class="btn btn-md btn-secondary btn-block", type = "submit", name = "action" , value = "Order by Housing Type")
				input(class="btn btn-md btn-secondary btn-block", type = "submit", name = "action" , value = "Order by Price")
				input(class="btn btn-md btn-secondary btn-block", type = "submit", name = "action" , value = "Order by Number of Bedrooms")
				input(class="btn btn-md btn-secondary btn-block", type = "submit", name = "action" , value = "Order by Number of Bathrooms")
				input(class="btn btn-md btn-secondary btn-block", type = "submit", name = "action" , value = "Order by Zip Code") 
				input(class="btn btn-md btn-secondary btn-block", type = "submit", name = "action" , value = "Back to Listings") 
	br

	table#fav.table.table-hover.table-striped.table-bordered
		thead
			tr
				td Type
				td Price
				td Size (sq ft)
				td Number of Bedroom
				td Number of Bathroom 
				td Street
				td City
				td State
				td Zip
		tbody
			each property in properties
				tr 
					td #{property.propertytype}
					td #{property.price}
					td #{property.size}
					td #{property.num_bedroom}
					td #{property.num_bathroom}  
					td #{property.street}
					td #{property.city}
					td #{property.state}
					td #{property.zip} 
					td 
						a(href='/favorites?addressid='+property.propertyid) Delete 
						
					script(src='https://cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css')
					script(src='https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js')
						
					script.
						$(document).ready(function() {
							$('#fav').DataTable();
						}); 
