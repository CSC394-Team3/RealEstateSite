doctype html

html

	body
		h1 Welcome #{name} !
		
		form(action = "/customerpanel", method = "post")
			div.actions 
				input(type = "submit", name = "action" , value = "change password") 
				input(type = "submit", name = "action" , value = "change email")  
				input(type = "submit", name = "action" , value = "change phone number")  
				
	br
	
	table
		thead
			tr 
				td First Name
				td Last Name 
				td Phone Number
				td Email 
		tbody 
			each customer in customers
				tr  
					td #{customer.first_name}
					td #{customer.last_name} 
					td #{customer.phone_number}
					td #{customer.email}  

