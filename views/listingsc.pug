doctype html

html


	link(rel = 'stylesheet' , href = '/css/bootstrap.min.css')
	link(rel = 'stylesheet' , href = '/css/styles.css') 
	link(href = 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" )
	
	style.
		body{
			 
		}
		
		input[type=submit] {
		  border-radius: 25px;
		  
		}
		
	body
	.container 
		h1 Customer Listings 
		  
		form(action = "/listingsc", method = "post")
			div.actions 
				input(class="btn btn-md btn-success btn-block float-right", type = "submit", name = "action" , value = "Order by Housing Type")
				input(class="btn btn-md btn-success btn-block float-right", type = "submit", name = "action" , value = "Order by Price")
				input(class="btn btn-md btn-success btn-block", type = "submit", name = "action" , value = "Order by Number of Bedrooms")
				input(class="btn btn-md btn-success btn-block", type = "submit", name = "action" , value = "Order by Number of Bathrooms")
				input(class="btn btn-md btn-success btn-block", type = "submit", name = "action" , value = "Order by Zip Code") 
				input(class="btn btn-md btn-success btn-block", type = "submit", name = "action" , value = "Contact Us")   
				input(class="btn btn-md btn-success btn-block", type = "submit", name = "action" , value = "Favorites") 
 
		table#listings.table.table-hover.table-striped.table-bordered
			thead
				tr
					td
					td Type
					td Price
					td Size (sq ft)
					td Number of Bedroom
					td Number of Bathroom 
					td Street
					td City 
					td State 
					td Zip
					td Realtor Email
			tbody
				each property in properties
					tr 
						 
						td 
							input#checkbox1(type='checkbox' name='options[]' value='1')
						 
						td #{property.propertytype}
						td #{property.price}
						td #{property.size}
						td #{property.num_bedroom}
						td #{property.num_bathroom}  
						td #{property.street}
						td #{property.city}
						td #{property.state}
						td #{property.zip}  
						td #{property.email}
						
						td
							div.actions
								a(class="btn btn-md btn-success btn-block", type = "submit", name = "action" , id = "contactRealtor", href = "/autofill") Contact Realtor  
						
						script(src='https://cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css')
						script(src='https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js')
						script(src='https://cdn.datatables.net/buttons/1.12.0/js/dataTables.buttons.min.js')
						
						script.
							$(document).ready(function() {
								$('#listings').DataTable();  
							});
							
							document.getElementById("contactRealtor").onclick = function () {
								href = "/autofill";
								var email  = "2";
								sessionStorage.setItem("email", #{property.email}); 
								console.log(email);
							 };
							

