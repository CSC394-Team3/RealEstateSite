doctype html

html 
	head
	
	
	link(rel = 'stylesheet' , href = '/css/bootstrap.min.css')
	link(rel = 'stylesheet' , href = '/css/styles.css')
	
	style. 
		form {
			border: 3px solid #f1f1f1;
			border-radius: 25px; 
		}
		h1 {text-align: center;}
		body {
			font-family: Arial, Helvetica, sans-serif; 
			margin        : 0;
			padding       : 0;
			display       : grid;
			place-content : center;
			background-image: url("526370.jpg");
		}  
		 
			
		input[type=text], input[type=password] {  
			width: 100%;
			padding: 12px 20px;
			margin: 11px 0;
			display: inline-block;
			border: 1px solid #ccc;
			box-sizing: border-box;
			}
		button {
			background-color: black;
			color: white;
			padding: 14px 20px;
			margin: 8px 0;
			border: none;
			cursor: pointer;
			width: 100%;
		
			display: table-cell;
			text-align: center;
			vertical-align: middle;
		}
		
		input[type="submit"] {
			display: block;
			margin: 0 auto;
			padding: 7px 14px;
		}
		 
		
		
		label {
			display: flex;
			flex-direction: row;
			justify-content: flex-end;
			text-align: right;
			width: 400px;
			line-height: 26px;
			margin-bottom: 10px;  
		}
		
	 


		span.h0s(style={color: 'white', 'font-size': '50px', 'tab-size': 12 }) Create your Willow Account:
		
		form(action = "/customersignup", method = "post") 
			
			
			div.input
				span.h1(style={color: 'white', 'font-size': '16px', 'tab-size': 12 }) <strong>Username<strong>
				input(type = "text", name = "Username" )

				
			div.input
				span.h2(style={color: 'white', 'font-size': '16px', 'tab-size': 12 }) <strong>Password<strong>
				input(type = "password" , name = "password")
				
			div.input
				sspan.h5(style={color: 'white', 'font-size': '16px', 'tab-size': 12 }) <strong>First Name<strong>
				input(type = "text" , name = "firstName")
				
			div.input
				span.h6(style={color: 'white', 'font-size': '16px', 'tab-size': 12 }) <strong>Last Name<strong>
				input(type = "text" , name = "lastName")
				
			div.input  
				span.h7(style={color: 'white', 'font-size': '16px', 'tab-size': 12 }) <strong>Phone Number<strong>
				input(type = "text" , name = "phoneno")
				
			div.input
				span.h8(style={color: 'white', 'font-size': '16px', 'tab-size': 12 }) <strong>Email<strong>
				input(type = "text" , name = "email")

			div.input
				span.h9(style={color: 'white', 'font-size': '16px', 'tab-size': 12 }) <strong>Accept Terms and Conditions<strong>
				input(type = "checkbox", name = "RealtorTerms", onclick="changeSubmit()")
				
			div.actions
				input(class="btn btn-lg btn-primary btn-block", type = "submit", id="submitButton", value = "done")
