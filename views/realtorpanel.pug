doctype html

html

	
	link(rel = 'stylesheet' , href = '/css/bootstrap.min.css')
	link(rel = 'stylesheet' , href = '/css/styles.css')
	
	style.
		body{
			background-color: #cad297;
		}
		
		input[type=submit] {
		  border-radius: 25px;
		  
		}
		table {
			border: 3px solid #f1f1f1;
			border-radius: 40px; 
			border-color: grey;
		}
		tr {
			border: 3px solid #f1f1f1;
			border-radius: 40px;
			border-color: grey;
		}
		td {
			border: 3px solid #f1f1f1;
			border-radius: 40px;
			border-color: grey;	
		}

	body
		 
		h1 Welcome #{name} !
		
		form(action = "/realtorpanel", method = "post")
			div.actions
				input(class="btn btn-md btn-secondary btn-block",type = "submit", name = "action" , value = "crud")
				input(class="btn btn-md btn-secondary btn-block",type = "submit", name = "action" , value = "change password")
				input(class="btn btn-md btn-secondary btn-block",type = "submit", name = "action" , value = "change phone number")
				input(class="btn btn-md btn-secondary btn-block",type = "submit", name = "action" , value = "change email")
				input(class="btn btn-md btn-secondary btn-block",type = "submit", name = "action" , value = "change agency")
				input(class="btn btn-md btn-secondary btn-block",type = "submit", name = "action" , value = "go to listings")
	br
	
	table
		thead
			tr
				td Realtor ID
				td First Name
				td Last Name
				td Agency
				td Phone Number
				td Email 
		tbody  
			tr 
				td #{realtor.realtorid}
				td #{realtor.first_name}
				td #{realtor.last_name}
				td #{realtor.agency}
				td #{realtor.phone_number}
				td #{realtor.email}  

